<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img7"
    android:orientation="vertical"
    tools:context="com.android.collegefiesta.ChooseLoginRegistrationActivity">

    <ImageView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/no_bg" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="New to the party? Register to join."
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/round_button"
            android:text="Register"
            android:textColor="#FFF" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:text="Already a memeber? Sign-in now"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/round_button"
            android:text="Login"
            android:textColor="#FFF" />
    </LinearLayout>

</LinearLayout>
